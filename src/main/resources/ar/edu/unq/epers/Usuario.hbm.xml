<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="ar.edu.unq.epers.servicios.Usuario" table="usuario" >
        <id name="dni" type="java.lang.Integer">
            <column name="dni" />
            <generator class="identity" />
        </id>

        <property name="nombre" type="string">
        </property>
        
        <property name="username" type="string">
        </property>
                
        <property name="apellido" type="string">
    	</property>
    	
        <property name="email" type="string">
    	</property>    	
        
        <property name="fnac" type="date">
        </property>
               
    	<property name="valcode" type="string">
    	</property>
    	
		<property name="password" type="string">
    	</property>
    	
       	<list name="reservas" cascade="all">
        <key column="resIDusr" 
            not-null="true"/>
        <index column="idx"/> 
        <one-to-many class="ar.edu.unq.epers.model.Reserva"/>
   		</list>
    </class>
</hibernate-mapping>